<div class="heading">
<h2>Ready for Pick Up!</h2>
<div class="in-line-header">
<h1>Sign up to instantly claim these recyclables</h1>
<%= link_to 'Sign up', new_user_registration_path, class:"btn-flat ml-3" %>
</div>
</div>
<div class="cards">
  <% @offers.each do |offer| %>
    <div class="card-product">
      <%= image_tag "erol-ahmed-wKTF65TcReY-unsplash.jpg" %>
      <div class="card-product-infos">
      <h1><%= link_to offer.volume , offer_path(offer) %></h1>
      <h2><%= offer.general_location %></h2>
      <p><%= offer.user.username %></p>
      </div>
    </div>
  <% end %>
</div>

