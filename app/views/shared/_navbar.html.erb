<div class="navbar navbar-expand-sm navbar-light navbar-lewagon">
  <div class="d-flex">
    <%= link_to root_path, class: "navbar-brand" do %>
      <%= image_tag "recycle-wagon-logo.png" %>
    <% end %>
    <div class="wagon">
      <h3>recycle</h3>
      <h3>wagon</h3>
    </div>
  </div>
  <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
    <span class="navbar-toggler-icon"></span>
  </button>


  <div class="collapse navbar-collapse" id="navbarSupportedContent">
    <ul class="navbar-nav mr-auto">
      <% if user_signed_in? %>
      <li class="nav-user">
        <p>Signed in</p>
        <% else %>
      <li class="nav-user">
          <p>Guest user</p>
      <% end %>
      <% if user_signed_in? %>
        <li class="nav-item">
          <%= link_to current_user.username, dashboard_offers_path, class: "nav-link" %>
        </li>
        <li class="nav-item dropdown">
          <% if current_user.username == "LuckySevans7" %>
            <%= image_tag "https://ca.slack-edge.com/T02NE0241-U011XTJSQUE-f36f6944853c-512", class: "avatar dropdown-toggle", id: "navbarDropdown", data: { toggle: "dropdown" }, 'aria-haspopup': true, 'aria-expanded': false %>
          <% elsif current_user.username == "VinnyRecycler" %>
            <%= image_tag "https://ca.slack-edge.com/T02NE0241-U012AQNQBE0-b4129dd1ac76-512", class: "avatar dropdown-toggle", id: "navbarDropdown", data: { toggle: "dropdown" }, 'aria-haspopup': true, 'aria-expanded': false %>
          <% elsif current_user.username == "GabrielGreen" %>
            <%= image_tag "https://ca.slack-edge.com/T02NE0241-U012H8QE7JM-484d2a1920db-512", class: "avatar dropdown-toggle", id: "navbarDropdown", data: { toggle: "dropdown" }, 'aria-haspopup': true, 'aria-expanded': false %>
          <% else %>
            <%= image_tag "https://ca.slack-edge.com/T02NE0241-U0124RW7F1R-ef37f689d26e-512", class: "avatar dropdown-toggle", id: "navbarDropdown", data: { toggle: "dropdown" }, 'aria-haspopup': true, 'aria-expanded': false %>
          <% end %>
          <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdown">
            <%= link_to "Create Offer", new_offer_path, class: "dropdown-item" %>
            <%= link_to "Search", offers_path, class: "dropdown-item" %>
            <%= link_to "Log out", destroy_user_session_path, method: :delete, class: "dropdown-item" %>
          </div>
        </li>
      <% else %>
        <li class="nav-item">
          <%= link_to "Login", new_user_session_path, class: "nav-link" %>
        </li>
        <li class="nav-item">
          <%= link_to 'Sign up', new_user_registration_path, class: "nav-link" %>
        </li>
      <% end %>
    </ul>
  </div>
</div>
